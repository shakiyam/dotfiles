# shellcheck disable=SC2148

HISTCONTROL=erasedups
HISTFILESIZE=100000
HISTSIZE=100000
HISTTIMEFORMAT="%FT%T%z "
IGNOREEOF=3
PROMPT_COMMAND="history -a; history -c; history -r"
PS1='[\u@\h \W]\$ '

shopt -s checkwinsize
shopt -s histappend
shopt -s histverify
shopt | grep -q direxpand && shopt -s direxpand

alias beautify_tsv='csvq -i TSV -f FIXED "SELECT * FROM STDIN"'
alias cp='cp -i'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'
alias gitchmod='git update-index --add --chmod=+x'
alias gitconfig='git config --local user.name "Shinichi Akiyama"; git config --local user.email shinichi.akiyama@gmail.com'
alias grep='grep --color=auto'
alias less='less -R'
alias loadenv='export $(grep -v "^#" .env | xargs -d "\n")'
alias ls='ls -F --color=auto --show-control-char -N'
alias mv='mv -i'
alias rm='rm -i'
alias shfmt='shfmt -l -d -i 2 -ci -bn'
alias watch='watch --color'

# shellcheck disable=SC1090
command -v kubectl &>/dev/null && source <(kubectl completion bash)

command -v mise &>/dev/null && eval "$(mise activate bash)"
