{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(cat:*)",
      "Bash(diff:*)",
      "Bash(echo:*)",
      "Bash(env:*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git show*)",
      "Bash(git status*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(ls:*)",
      "Bash(make flake8:*)",
      "Bash(make hadolint:*)",
      "Bash(make lint:*)",
      "Bash(make mypy:*)",
      "Bash(make rubocop:*)",
      "Bash(make shellcheck:*)",
      "Bash(make shfmt:*)",
      "Bash(make test:*)",
      "Bash(pwd)",
      "Bash(tail:*)",
      "Bash(type:*)",
      "Bash(wc:*)",
      "Bash(which:*)"
    ],
    "deny": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(sudo:*)",
      "Bash(rm -rf:*)",
      "Bash(eval:*)"
    ]
  },
  "alwaysThinkingEnabled": false
}